<h1> Features </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Active?</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% for feature in @features %>
      <tr>
        <td><%= feature.name %></td>
        <td><%= feature.active.to_s %></td>
        <td><%= link_to "Show", admin_plans_feature_path(feature) %></td>
        <td><%= link_to "Edit", edit_admin_plans_feature_path(feature) %></td>
        <td><%= link_to "Destroy", admin_plans_feature_path(feature), :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p><%= link_to "New Feature", new_admin_plans_feature_path, :class => 'button' %></p>
